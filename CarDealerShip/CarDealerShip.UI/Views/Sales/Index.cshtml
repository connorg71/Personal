
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="row bordered-row">
    <div class="col-12">
    <div class="row">Quick Search</div>
    <div class="row">
        <div class="col-4"><input type="text" id="searchTerm" placeholder="Enter make, model, or year"/></div>
        <div class="col-4"><span>Price</span><select id="minPrice"></select><select id="maxPrice"></select></div>
        <div class="col-4"><span>Year</span><select id="minYear"></select><select id="maxYear"></select></div>
    </div>
        <div class="row"><div class="col-4 offset-4"><a id="submit" href="#" class="btn btn-info">Search</a></div></div>
    </div>
</div>
<h2>Search Results</h2>
<div class="row">
    <div id="searchResults" class="col-12"></div>
</div>
<script type="text/javascript" language="javascript">

    $(document).ready(function () {
        $('#submit').on('click', function () {
            var searchTerm = $('#searchTerm').val();
            $.post('/Sales/Search', {
                "SearchTerm": searchTerm
            }, function (data) {
                $('#searchResults').empty().append(data);
            });
            
        });
    });

</script>